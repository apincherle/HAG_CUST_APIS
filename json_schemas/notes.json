{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "notes",
    "description": "Details on notes made by users in the platform.\n\n---\n\nLDM Ref: Collaboration \\ Note",
    "properties": {
        "_id": {
            "type": "string",
            "description": "A system-generated unique identifier for a Note, with a format and structure defined by the technology used. As a technical attribute, it has no business meaning.\n\n---\n\nLDM Ref: Note.Note ID",
            "examples": [
                "0f8fad5b-d9cb-469f-a165-70867728950e"
            ],
            "maxLength": 36,
            "minLength": 36,
            "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$"
        },
        "context": {
            "type": "object",
            "description": "This Sub-Document represents a general structure to reference several objects, with which the note can be associated. For example, a note can be associated with a contract, a placement, or even with another note.",
            "properties": {
                "_xid": {
                    "type": "string",
                    "description": "This field represents the ID of the object the note is associated with. \n\nExample: it can be a contract, a placement, or a note\n",
                    "examples": [
                        "0f8fad5b-d9cb-469f-a165-70867728950e"
                    ],
                    "maxLength": 36,
                    "minLength": 36,
                    "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$"
                },
                "type": {
                    "type": "string",
                    "description": "**Reference Data**\n\nThe type of object the context points to.\n\nSee ContextType in Reference Data.\n\n---"
                }
            },
            "additionalProperties": false,
            "required": [
                "_xid",
                "type"
            ]
        },
        "note": {
            "type": "string",
            "description": "The content of the note.\n\n---\n\nLDM Ref: Collaboration.Note.Note"
        },
        "user": {
            "type": "object",
            "description": "The ID of the user that made the note.\n\n---\n\nLDM Ref: Collaboration.Note.User ID\n",
            "properties": {
                "_xid": {
                    "type": "string",
                    "description": "Reference to the user that created the note. This field hold the _id of the user in the users collection.",
                    "examples": [
                        "0f8fad5b-d9cb-469f-a165-70867728950e"
                    ],
                    "maxLength": 36,
                    "minLength": 36,
                    "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$"
                },
                "first_name": {
                    "type": "string",
                    "description": "The first name of the user that created the note.\n\n---\n\nLDM Ref: Person.First Name",
                    "examples": [
                        "Joeseph"
                    ]
                },
                "last_name": {
                    "type": "string",
                    "description": "The last name of the user that created the note.\n\n---\n\nLDM Ref: Person.Last Name",
                    "examples": [
                        "Bloggs"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "_xid",
                "first_name",
                "last_name"
            ]
        },
        "_metadata": {
            "type": "object",
            "properties": {
                "creation_date": {
                    "type": "string",
                    "description": "The date at which the entity was created.",
                    "examples": [
                        "ISODate(\"2021-10-11T11:50:00Z\")"
                    ],
                    "format": "date"
                },
                "creation_channel": {
                    "type": "string",
                    "description": "Channel used to make the entity, e.g. OutSystems.",
                    "examples": [
                        "OutSystems"
                    ]
                },
                "creation_user": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$",
                    "minLength": 36,
                    "maxLength": 36,
                    "description": "_id of the user creating the entity.",
                    "examples": [
                        "0f8fad5b-d9cb-469f-a165-70867728950e"
                    ]
                },
                "modified_date": {
                    "type": "string",
                    "description": "The date at which the change was made.",
                    "examples": [
                        "ISODate(\"2021-12-11T11:50:00Z\")"
                    ],
                    "format": "date"
                },
                "modified_channel": {
                    "type": "string",
                    "description": "Channel used to make the change, e.g. OutSystems.",
                    "examples": [
                        "OutSystems"
                    ]
                },
                "modified_user": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$",
                    "minLength": 36,
                    "maxLength": 36,
                    "description": "_id of the user making the change.",
                    "examples": [
                        "0f8fad5b-d9cb-469f-a165-70867728950e"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "creation_date",
                "creation_channel",
                "creation_user",
                "modified_date",
                "modified_channel",
                "modified_user"
            ]
        },
        "team": {
            "type": "object",
            "description": "It stores team_xid and the team_name which the user responsible for the note belongs to.",
            "properties": {
                "_xid": {
                    "type": "string",
                    "description": "It is the ID of the Team.",
                    "examples": [
                        "0f8fad5b-d9cb-469f-a165-70867728950e"
                    ],
                    "maxLength": 36,
                    "minLength": 36,
                    "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$"
                },
                "name": {
                    "type": "string",
                    "description": "It stores the name of the Team referenced."
                }
            },
            "additionalProperties": false,
            "required": [
                "_xid",
                "name"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "_id",
        "context",
        "note",
        "user",
        "_metadata",
        "team"
    ]
}